.s-
  &box
    padding-top: ($space/5)
    padding-bottom: ($space/5)
    margin-bottom: $space
    border-radius(5px)
    min-height: 49px
    > *
      vertical-align: middle
      display: inline-block
      margin-bottom: 0
    > .s-wrapper
      display: block
    > ul, > .s-wrapper > ul
      &:before
        display: inline-block
        vertical-align: middle
        height: 40px
      margin-left: $buttonSpacingH
      > li
        display: inline-block
        margin-bottom: 0
        margin-right: ($space/3)
        > *
          margin-bottom: 0
      &.s-right
        float:right
    &-caption
      &_left:not(img)
        overflow: hidden
        display: block
      &_right:not(img)
        overflow: hidden
        display: block
    p:last-child
      margin-bottom: 0
    &:after, &:before
      content: ' '
      display: table
    &:after
      clear: both
    &-heading
      color: $black
      font-weight: 500
      padding-left: 0
    > .s-wrapper
      padding-top: 0
      padding-bottom: 0
    a:not(.s-btn):not(.s-close)
      color: $darkGrey
    &.s-fixed
      position: fixed
      top: 0
      left: 0
      right: 0
      border-radius(0 0 0 0)
    &.s-clear
      background-color: transparent
    &.s-dark
      background-color: $black
      a:not(.s-btn)
        color: white
    &.s-grey
      background-color: $lightGrey
    input
      &[type="text"],
      &[type="email"],
      &[type="search"],
      &[type="date"],
      &[type="datetime"],
      &[type="datetime-local"],
      &[type="month"],
      &[type="number"],
      &[type="password"],
      &[type="tel"],
      &[type="time"],
      &[type="url"],
      &[type="week"]
        width: auto
    &.s-box_vertical
      > ul > li
        display: block
        > *:not(s-btn)
          padding-bottom: 0
        &:last-child
          padding-bottom: $buttonSpacingV

img.s-
  &box-caption_
    &left
      margin-right: ($space/2)
      float: left
    &right
      margin-left: ($space/2)
      float: right