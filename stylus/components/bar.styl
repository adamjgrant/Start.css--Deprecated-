.s-
  &bar
    background-color: $lightGrey
    padding: ($space/5)
    margin-bottom: $space
    border-radius(5px)
    &:after, &:before
      content: ' '
      display: table
    &:after
      clear: both
    &-heading
      color: $black
      font-weight: 500
    > ul
      margin-bottom: 0
      display: block
      float: left
      > li
        display: inline-block 
        margin-bottom: 0
        > *
          display: block
          margin: $buttonSpacingV $buttonSpacingH
        > .s-btn, input
          margin: 0
        > .fa
          display: inline-block
          margin-right: 0
        > ul
            display: none
            margin: 0
      &.s-right
        float: right
        > li
          > .fa
            margin-left: 0
    a:not(.s-btn)
      color: $darkGrey