@-webkit-keyframes fadeInDown
  0%
    opacity: 0
    transform(translateY(-20px))

  100%
    opacity: 1
    transform(translateY(0))
@-moz-keyframes fadeInDown
  0%
    opacity: 0
    transform(translateY(-20px))

  100%
    opacity: 1
    transform(translateY(0))
@-o-keyframes fadeInDown
  0%
    opacity: 0
    transform(translateY(-20px))

  100%
    opacity: 1
    transform(translateY(0))
@-ms-keyframes fadeInDown
  0%
    opacity: 0
    transform(translateY(-20px))

  100%
    opacity: 1
    transform(translateY(0))

.s-modal
  display: none
  width: 500px
  left: 50%
  top: 50px
  margin-left: -250px
  min-height: 100px
  background-color: #fff
  box-shadow(0px 0px 25px 10px rgba(0,0,0,0.4))
  z-index: 11
  padding: 15px
  padding-top: 0px
  position: fixed
  outline: 9999px solid rgba(0,0,0,0.25)
  border-radius(5px)
  animation-duration(0.25s)
  animation-delay(0.2s)
  animation-timing-function(ease)
  animation-fill-mode(both)
  &[style="display: block;"]
    animation-name(fadeInDown)
  .s-close
    float: right
    cursor: pointer
    opacity: 0.3
  .s-btn
    float: right
    margin-left: 5px