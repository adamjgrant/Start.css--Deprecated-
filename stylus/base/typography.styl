h1, h2, h3, h4, h5
  font-family: $font-headings
  font-size: $font-headings-baseSize
  color: $black
  line-height: normal
  margin: ($space * 0.4) 0
  font-weight: 500
  &:first-child
    margin-top: 0
p, 
em, 
strong, 
i, 
b, 
ul, 
ol, 
li, 
table, 
blockquote,
.s-btn
  font-family: $font-default
  font-size: $font-baseSize
  color: $black
  margin-bottom: $space
  line-height: $font-baseLineHeight
body
  font-family: $font-default
  font-size: $font-baseSize
  color: $black
  line-height: $font-baseLineHeight

h1
  font-size: $font-headings-baseSize + 20
  margin: $space 0
h2
  font-size: $font-headings-baseSize + 16
  margin: ($space * 0.7) 0
h3
  font-size: $font-headings-baseSize + 10
  margin: ($space * 0.65) 0
h4
  font-size: $font-headings-baseSize + 3
  margin: ($space * 0.5) 0

blockquote
  font-family: $font-serif
  margin: $space
  font-style: italic
  font-size: $font-baseSize + 14
  line-height: $font-baseSize + 24
  &:before
    content: open-quote
    font-size: 70px
    margin-left: -30px

// COLORS

p, 
em, 
strong, 
i, 
b, 
ul, 
ol, 
li,
blockquote,
a
  &.s-
    &red
      color: $red
    &orange
      color: $orange
    &yellow
      color: $yellow
    &green
      color: $green
    &blue
      color: $blue
    &violet
      color: $violet
strong
  font-weight: 500
